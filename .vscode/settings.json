{
  "flake8.args": [
    "--max-line-length=120"
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args": [
    "--profile",
    "black"
  ],
  "pylint.args": [
    "--disable=C0114",
    "--disable=C0115",
    "--disable=C0116",
    "--disable=C0411",
    "--disable=W1203",
  ],
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange"
}